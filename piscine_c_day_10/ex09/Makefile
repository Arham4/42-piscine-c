CFLAGS= -Wall -Werror -Wextra
SRCS = ft_advanced_opp.c ft_opp.c utilities.c utilities2.c
NAME = ft_advanced_do-op

all:
	gcc -o $(NAME) $(SRCS) $< $(CFLAGS)

clean:
	rm -f $(NAME)
